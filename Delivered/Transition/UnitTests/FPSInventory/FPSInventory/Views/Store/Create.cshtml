@model FPSInventory.Models.Store

@{
    ViewData["Title"] = "Add a Store";
}

<h1>@ViewData["Title"]</h1>
<div class="line"></div>
<h4>Store</h4>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Namestore" class="control-label"></label>
                <input asp-for="Namestore" class="form-control" />
                <span asp-validation-for="Namestore" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdCity" class="control-label"></label>
                <select asp-for="IdCity" class="form-control" asp-items="ViewBag.IdCity"></select>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="white">&leftarrow; Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
