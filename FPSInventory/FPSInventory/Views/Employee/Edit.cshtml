@model FPSInventory.Models.Employee
@using Microsoft.AspNetCore.Http

@{
    ViewData["Title"] = $"Edit Details for {Context.Session.GetString("employeeName")}";
}

<h1>@ViewData["Title"]</h1>

<h4>Employee</h4>
<hr />
<form id="formFPS" asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Idemployee" />
    <div class="form-group">
        <label asp-for="Name" ></label><br>
        <input asp-for="Name"  />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email" ></label><br>
        <input asp-for="Email"  />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Gender" ></label><br>
        <input asp-for="Gender"  />
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Role" ></label><br>
        <input asp-for="Role"  />
        <span asp-validation-for="Role" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" />
    </div>
</form>

<div>
    <a asp-action="Index" style="color:white;">&leftarrow; Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
